{
    "openapi": "3.0.1",
    "info": {
        "title": "Tarefas",
        "description": "API de documentação para tarefas",
        "version": "1.0.0"
    },
    "tags": [
        {
            "name": "User Operations",
            "description": "Operações relacionadas aos usuários"
        },
        {
            "name": "Task Operations",
            "description": "Operações relacionadas as tarefas"
        }
    ],
    "paths": {
        "/listarUsuarios": {
            "get": {
                "tags": [
                    "User Operations"
                ],
                "description": "Lista todos os usuários",
                "responses": {
                    "200": {
                        "description": "Retornará lista de usuários cadastrados"
                    }
                }
            }
        },
        "/registrarUsuario": {
            "post": {
                "tags": [
                    "User Operations"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário registrado com sucesso."
                    },
                    "409": {
                        "description": "Erro: Email já está registrado"
                    },
                    "440": {
                        "description": "Erro: Necessário informar um email."
                    },
                    "441": {
                        "description": "Erro: Necessário informar uma senha."
                    },
                    "500": {
                        "description": "Erro: Não foi possível realizar esta ação, tente novamente mais tarde."
                    }
                }
            }
        },
        "/editarUsuario": {
            "put": {
                "tags": [
                    "User Operations"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Senha alterada com sucesso."
                    },
                    "440": {
                        "description": "Erro: Necessário informar um email."
                    },
                    "500": {
                        "description": "Erro: Não foi possível realizar esta ação, tente novamente mais tarde."
                    }
                }
            }
        },
        "/deletarUsuario": {
            "delete": {
                "tags": [
                    "User Operations"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário deletado com sucesso!"
                    },
                    "440": {
                        "description": "Erro: Necessário informar um email."
                    },
                    "500": {
                        "description": "Erro: Não foi possível realizar esta ação, tente novamente mais tarde."
                    }
                }
            }
        },
        "/autenticarUsuario": {
            "post": {
                "tags": [
                    "User Operations"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Não autorizado."
                    },
                    "200": {
                        "description": "Autenticado."
                    }
                }
            }
        },
        "/listarTarefas": {
            "get": {
                "tags": [
                    "Task Operations"
                ],
                "description": "Lista todas as tarefas",
                "responses": {
                    "200": {
                        "description": "Retornará lista de tarefas registradas"
                    }
                }
            }
        }
    }
}