{
    "openapi": "3.0.1",
    "info": {
        "title": "Tarefas",
        "description": "API de documentação para tarefas",
        "version": "1.0.0"
    },
    "tags": [
        {
            "name": "User Operations",
            "description": "Operações relacionadas aos usuários"
        },
        {
            "name": "Task Operations",
            "description": "Operações relacionadas as tarefas"
        }
    ],
    "paths": {
        "/listarUsuarios": {
            "get": {
                "tags": [
                    "User Operations"
                ],
                "description": "Lista todos os usuários",
                "responses": {
                    "200": {
                        "description": "Retornará lista de usuários cadastrados"
                    }
                }
            }
        },
        "/registrarUsuario": {
            "post": {
                "tags": [
                    "User Operations"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário registrado com sucesso."
                    },
                    "409": {
                        "description": "Erro: Email já está registrado"
                    },
                    "440": {
                        "description": "Erro: Necessário informar um email."
                    },
                    "441": {
                        "description": "Erro: Necessário informar uma senha."
                    },
                    "500": {
                        "description": "Erro: Não foi possível realizar esta ação, tente novamente mais tarde."
                    }
                }
            }
        },
        "/editarUsuario": {
            "put": {
                "tags": [
                    "User Operations"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Senha alterada com sucesso."
                    },
                    "440": {
                        "description": "Erro: Necessário informar um email."
                    },
                    "500": {
                        "description": "Erro: Não foi possível realizar esta ação, tente novamente mais tarde."
                    }
                }
            }
        },
        "/deletarUsuario": {
            "delete": {
                "tags": [
                    "User Operations"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário deletado com sucesso!"
                    },
                    "440": {
                        "description": "Erro: Necessário informar um email."
                    },
                    "500": {
                        "description": "Erro: Não foi possível realizar esta ação, tente novamente mais tarde."
                    }
                }
            }
        },
        "/autenticarUsuario": {
            "post": {
                "tags": [
                    "User Operations"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Não autorizado."
                    },
                    "200": {
                        "description": "Autenticado."
                    }
                }
            }
        },
        "/listarTarefas": {
            "get": {
                "tags": [
                    "Task Operations"
                ],
                "parameters": [
                    {
                        "name": "x-acess-token",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Token de acesso para autenticação"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retornará lista de tarefas registradas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "integer"
                                            },
                                            "description": {
                                                "type": "string"
                                            },
                                            "email_id": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/registrarTarefa": {
            "post": {
                "tags": [
                    "Task Operations"
                ],
                "parameters": [
                    {
                        "name": "x-acess-token",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Token de acesso para autenticação"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "description": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Tarefa registrada com sucesso."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/editarTarefa": {
            "put": {
                "tags": [
                    "Task Operations"
                ],
                "parameters": [
                    {
                        "name": "x-acess-token",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Token de acesso para autenticação"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "integer"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Tarefa editada com sucesso."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/deletarTarefa": {
            "delete": {
                "tags": [
                    "Task Operations"
                ],
                "parameters": [
                    {
                        "name": "x-acess-token",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Token de acesso para autenticação"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "integer"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Tarefa deletada com sucesso."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        }
    }
}